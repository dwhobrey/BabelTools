<res:ShellControl x:Class="Babel.Recorder.RecorderControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:res="clr-namespace:Babel.Resources;assembly=BabelResources"
        xmlns:core="clr-namespace:Babel.Core;assembly=BabelCore"
        xmlns:local="clr-namespace:Babel.Recorder;assembly=BabelRecorder"
        xmlns:oxy="clr-namespace:OxyPlot.Wpf;assembly=OxyPlot.Wpf"
        xmlns:xctk="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit"
        MinWidth="550"
        MinHeight="300"
       >
    <res:ShellControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/BabelResources;component/Resources/Styles.xaml" />
                <ResourceDictionary Source="pack://application:,,,/BabelRecorder;component/Resources/Recorder.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </res:ShellControl.Resources>
    <Grid Margin="0" SizeChanged="Shell_SizeChanged" Background="{DynamicResource ControlBackgroundBrush}">
        <TabControl DockPanel.Dock="Top" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="0"
                    SelectionChanged="TabControl_SelectionChanged">
            <TabItem Header="Motion">
                <DockPanel VerticalAlignment="Stretch" Height="Auto" LastChildFill="True">
                    <Grid HorizontalAlignment="Center" DockPanel.Dock="Bottom" Margin="0,0,0,5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="10" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="10" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="10" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="10" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="10" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Row="0" Grid.Column="0" FontSize="12" Margin="0,4,2,0">Magnify</TextBlock>
                        <ComboBox Grid.Row="0" Grid.Column="1" Name="ZoomDirection" Margin="0,0,0,0"
                              SelectedValuePath="Content" SelectedIndex="0"
                              HorizontalAlignment="Right" Style="{DynamicResource OptionsComboBox}">
                            <ComboBoxItem Style="{DynamicResource OptionsComboBoxItem}" Content="X axis"/>
                            <ComboBoxItem Style="{DynamicResource OptionsComboBoxItem}" Content="Y axis"/>
                        </ComboBox>
                        <TextBlock Grid.Row="0" Grid.Column="2"/>
                        <Button Grid.Row="0" Grid.Column="3" Content="Zero" Name="ZeroButton"/>
                        <TextBlock Grid.Row="0" Grid.Column="4"/>
                        <Button Grid.Row="0" Grid.Column="5" Content="Home" Name="HomeButton"/>
                        <TextBlock Grid.Row="0" Grid.Column="6"/>
                        <Button Grid.Row="0" Grid.Column="7" Content="Goto" Name="GotoButton"/>
                        <TextBlock Grid.Row="0" Grid.Column="8"/>
                        <xctk:DecimalUpDown Grid.Row="0" Grid.Column="9" Name="GotoPosition" 
                                        FormatString="F0" Increment="1"                                      
                                        IsReadOnly="False" Value="0"/>
                        <!--  Minimum="-359" Maximum="359" -->
                        <TextBlock Grid.Row="0" Grid.Column="10"/>
                        <TextBlock Grid.Row="0" Grid.Column="11" FontSize="12" Margin="0,4,2,0">RPM%</TextBlock>
                        <xctk:DecimalUpDown Grid.Row="0" Grid.Column="12"
                                        Name="GotoRPM" FormatString="F1" Increment="1.0"
                                        Minimum="1.0" Maximum="100.0" 
                                        IsReadOnly="False" Value="50.0"/>
                    </Grid>

                    <Grid HorizontalAlignment="Center" DockPanel.Dock="Bottom" Margin="0,0,0,10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="10" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="10" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="10" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="10" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="10" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="10" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="10" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center">
                            <TextBlock FontSize="12">Speed</TextBlock>
                            <xctk:DecimalUpDown Name="TimeLineSpeed" FormatString="F1" Increment="0.1"
                                        Minimum="0.0" Maximum="16.0" 
                                        IsReadOnly="False" Value="1.0"/>
                        </StackPanel>
                        <TextBlock Grid.Row="0" Grid.Column="1"/>
                        <Button Grid.Row="0" Grid.Column="2"  Margin="4,0,0,0" Name="ReverseTimeLineButton">
                            <DockPanel LastChildFill="True">
                                <Image DockPanel.Dock="Bottom" Source="{StaticResource MediaReverseImage}" Stretch="None"/>
                                <TextBlock DockPanel.Dock="Top" HorizontalAlignment="Center" >Back</TextBlock>
                            </DockPanel>
                        </Button>
                        <TextBlock Grid.Row="0" Grid.Column="3"/>
                        <Button Grid.Row="0" Grid.Column="4" Name="PlayTimeLineButton">
                            <DockPanel LastChildFill="True">
                                <Image DockPanel.Dock="Bottom" Source="{StaticResource MediaForwardImage}" Stretch="None"/>
                                <TextBlock DockPanel.Dock="Top" HorizontalAlignment="Center" >Play</TextBlock>
                            </DockPanel>
                        </Button>
                        <TextBlock Grid.Row="0" Grid.Column="5"/>
                        <Button Grid.Row="0" Grid.Column="6" Name="RecordTimeLineButton">
                            <DockPanel LastChildFill="True">
                                <Image DockPanel.Dock="Bottom" Source="{StaticResource MediaRecordImage}" Stretch="None"/>
                                <TextBlock DockPanel.Dock="Top" HorizontalAlignment="Center" >Record</TextBlock>
                            </DockPanel>
                        </Button>
                        <TextBlock Grid.Row="0" Grid.Column="7"/>
                        <Button Grid.Row="0" Grid.Column="8" Name="PauseTimeLineButton">
                            <DockPanel LastChildFill="True">
                                <Image DockPanel.Dock="Bottom" Source="{StaticResource MediaPauseImage}" Stretch="None"/>
                                <TextBlock DockPanel.Dock="Top" HorizontalAlignment="Center" >Pause</TextBlock>
                            </DockPanel>
                        </Button>
                        <TextBlock Grid.Row="0" Grid.Column="9"/>
                        <Button Grid.Row="0" Grid.Column="10" Name="StopTimeLineButton">
                            <DockPanel LastChildFill="True">
                                <Image DockPanel.Dock="Bottom" Source="{StaticResource MediaStopImage}" Stretch="None"/>
                                <TextBlock DockPanel.Dock="Top" HorizontalAlignment="Center" >Stop</TextBlock>
                            </DockPanel>
                        </Button>
                        <TextBlock Grid.Row="0" Grid.Column="11"/>
                        <Button Grid.Row="0" Grid.Column="12" Name="PrimeTimeLineButton">
                            <DockPanel LastChildFill="True">
                                <Image DockPanel.Dock="Bottom" Source="{StaticResource MediaSkipDownImage}" Stretch="None"/>
                                <TextBlock DockPanel.Dock="Top" HorizontalAlignment="Center" >Prime</TextBlock>
                            </DockPanel>
                        </Button>
                        <TextBlock Grid.Row="0" Grid.Column="13"/>
                        <StackPanel Grid.Row="0" Grid.Column="14" Orientation="Vertical">
                            <TextBlock FontSize="12">Mode</TextBlock>
                            <ComboBox  Name="RecorderAction" Margin="0,0,5,0"
                              SelectedValuePath="Content" SelectedIndex="0"
                              HorizontalAlignment="Right" Style="{DynamicResource OptionsComboBox}">
                                <ComboBoxItem Style="{DynamicResource OptionsComboBoxItem}" Content="Idle"/>
                                <ComboBoxItem Style="{DynamicResource OptionsComboBoxItem}" Content="Play"/>
                                <ComboBoxItem Style="{DynamicResource OptionsComboBoxItem}" Content="Record"/>
                            </ComboBox>
                        </StackPanel>
                    </Grid>

                    <DockPanel HorizontalAlignment="Stretch" LastChildFill="True" DockPanel.Dock="Bottom">
                        <ComboBox DockPanel.Dock="Left" Name="FramesPerSecond" Margin="4,0,0,6"
                              SelectedValuePath="Content" SelectedIndex="0"
                              HorizontalAlignment="Right" Style="{DynamicResource OptionsComboBox}">
                            <ComboBoxItem Style="{DynamicResource OptionsComboBoxItem}" Content="24"/>
                            <ComboBoxItem Style="{DynamicResource OptionsComboBoxItem}" Content="25"/>
                            <ComboBoxItem Style="{DynamicResource OptionsComboBoxItem}" Content="30"/>
                            <ComboBoxItem Style="{DynamicResource OptionsComboBoxItem}" Content="1000"/>
                        </ComboBox>
                        <TextBlock Name="TimeLineCurrent"  Margin="6,4,6,6" DockPanel.Dock="Left" Text="00:00.0"/>
                        <TextBlock Name="RecorderStatus" Width="80" TextAlignment="Center"
                                   Margin="6,4,6,6" DockPanel.Dock="Right" Background="White" Text="Not Ready"/>
                        <TextBlock Name="TimeLineEnd"  Margin="6,4,6,6" DockPanel.Dock="Right" Text="00:00.0"/>
                        <Slider Name="TimeLineSlider" Margin="0,2,0,10" Minimum="0.0" Maximum="1.0"></Slider>
                    </DockPanel>

                    <DockPanel VerticalAlignment="Stretch" LastChildFill="True">
                        <DockPanel DockPanel.Dock="Right">
                            <Button  DockPanel.Dock="Bottom" Margin="6,4,6,2" Name="LockButton">Lock</Button>
                            <StackPanel DockPanel.Dock="Bottom">
                                <TextBlock FontSize="12" HorizontalAlignment="Center" Text="Triggers"/>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Name="TriggerState1" Style="{StaticResource TinyButtonStyle}"  
                                            Margin="0,1,2,4" Visibility="Visible">1</Button>
                                    <Button Name="TriggerState2" Style="{StaticResource TinyButtonStyle}"
                                            Margin="2,1,0,4" Visibility="Visible">2</Button>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Name="TriggerState3" Style="{StaticResource TinyButtonStyle}"  
                                                Margin="0,0,2,4" Visibility="Visible">3</Button>
                                    <Button Name="TriggerState4" Style="{StaticResource TinyButtonStyle}"
                                                Margin="2,0,0,4" Visibility="Visible">4</Button>
                                </StackPanel>
                            </StackPanel>
                            <StackPanel DockPanel.Dock="Top">
                                <TextBlock FontSize="12" HorizontalAlignment="Center" Text="Ax:On/Shw"/>
                                <StackPanel Name="AxisInfo1" Visibility="Visible"
                                            Orientation="Vertical" HorizontalAlignment="Center">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Name="AxisState1" Style="{StaticResource TinyButtonStyle}">1</Button>
                                        <CheckBox Name="AxisActive1" Margin="2,2,0,0" IsChecked="True"/>
                                        <TextBlock Margin="0,0,0,0" Text="/"/>
                                        <CheckBox Name="AxisShow1" Margin="2,2,0,0" IsChecked="True" />
                                    </StackPanel>
                                    <TextBlock Name="AxisPosition1" FontSize="12" HorizontalAlignment="Center" Text="0.0"/>
                                </StackPanel>
                                <StackPanel Name="AxisInfo2" Visibility="Collapsed"
                                            Orientation="Vertical" HorizontalAlignment="Center">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Name="AxisState2" Style="{StaticResource TinyButtonStyle}">2</Button>
                                        <CheckBox Name="AxisActive2" Margin="2,2,0,0" IsChecked="True" />
                                        <TextBlock Margin="0,0,0,0" Text="/"/>
                                        <CheckBox Name="AxisShow2" Margin="2,2,0,0" IsChecked="True" />
                                    </StackPanel>
                                    <TextBlock Name="AxisPosition2" FontSize="12" HorizontalAlignment="Center" Text="0.0"/>
                                </StackPanel>
                                <StackPanel Name="AxisInfo3" Visibility="Collapsed"
                                            Orientation="Vertical" HorizontalAlignment="Center">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Name="AxisState3" Style="{StaticResource TinyButtonStyle}">3</Button>
                                        <CheckBox Name="AxisActive3" Margin="2,2,0,0" IsChecked="True" />
                                        <TextBlock Margin="0,0,0,0" Text="/"/>
                                        <CheckBox Name="AxisShow3" Margin="2,2,0,0" IsChecked="True" />
                                    </StackPanel>
                                    <TextBlock Name="AxisPosition3" FontSize="12" HorizontalAlignment="Center" Text="0.0"/>
                                </StackPanel>
                                <StackPanel Name="AxisInfo4" Visibility="Collapsed"
                                            Orientation="Vertical" HorizontalAlignment="Center">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Name="AxisState4" Style="{StaticResource TinyButtonStyle}">4</Button>
                                        <CheckBox Name="AxisActive4" Margin="2,2,0,0" IsChecked="True" />
                                        <TextBlock Margin="0,0,0,0" Text="/"/>
                                        <CheckBox Name="AxisShow4" Margin="2,2,0,0" IsChecked="True" />
                                    </StackPanel>
                                    <TextBlock Name="AxisPosition4" FontSize="12" HorizontalAlignment="Center" Text="0.0"/>
                                </StackPanel>
                                <StackPanel Name="AxisInfo5" Visibility="Collapsed"
                                            Orientation="Vertical" HorizontalAlignment="Center">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Name="AxisState5" Style="{StaticResource TinyButtonStyle}">5</Button>
                                        <CheckBox Name="AxisActive5" Margin="2,2,0,0" IsChecked="True" />
                                        <TextBlock Margin="0,0,0,0" Text="/"/>
                                        <CheckBox Name="AxisShow5" Margin="2,2,0,0" IsChecked="True" />
                                    </StackPanel>
                                    <TextBlock Name="AxisPosition5" FontSize="12" HorizontalAlignment="Center" Text="0.0"/>
                                </StackPanel>
                                <StackPanel Name="AxisInfo6" Visibility="Collapsed"
                                            Orientation="Vertical" HorizontalAlignment="Center">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Name="AxisState6" Style="{StaticResource TinyButtonStyle}">6</Button>
                                        <CheckBox Name="AxisActive6" Margin="2,2,0,0" IsChecked="True" />
                                        <TextBlock Margin="0,0,0,0" Text="/"/>
                                        <CheckBox Name="AxisShow6" Margin="2,2,0,0" IsChecked="True" />
                                    </StackPanel>
                                    <TextBlock Name="AxisPosition6" FontSize="12" HorizontalAlignment="Center" Text="0.0"/>
                                </StackPanel>
                                <StackPanel Name="AxisInfo7" Visibility="Collapsed"
                                            Orientation="Vertical" HorizontalAlignment="Center">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Name="AxisState7" Style="{StaticResource TinyButtonStyle}">7</Button>
                                        <CheckBox Name="AxisActive7" Margin="2,2,0,0" IsChecked="True" />
                                        <TextBlock Margin="0,0,0,0" Text="/"/>
                                        <CheckBox Name="AxisShow7" Margin="2,2,0,0" IsChecked="True" />
                                    </StackPanel>
                                    <TextBlock Name="AxisPosition7" FontSize="12" HorizontalAlignment="Center" Text="0.0"/>
                                </StackPanel>
                                <StackPanel Name="AxisInfo8" Visibility="Collapsed"
                                            Orientation="Vertical" HorizontalAlignment="Center">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Name="AxisState8" Style="{StaticResource TinyButtonStyle}">8</Button>
                                        <CheckBox Name="AxisActive8" Margin="2,2,0,0" IsChecked="True" />
                                        <TextBlock Margin="0,0,0,0" Text="/"/>
                                        <CheckBox Name="AxisShow8" Margin="2,2,0,0" IsChecked="True" />
                                    </StackPanel>
                                    <TextBlock Name="AxisPosition8" FontSize="12" HorizontalAlignment="Center" Text="0.0"/>
                                </StackPanel>
                            </StackPanel>
                        </DockPanel>
                        <oxy:Plot x:Name="plotter"/>
                    </DockPanel>

                </DockPanel>
            </TabItem>
            <TabItem Header="Job Storage">
                <Grid Margin="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0" Margin="0,0,0,4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="CurrentPath"/>
                        <Button Grid.Column="1" 
                            Margin="4,0,0,0"
                            Content="Read"
                            Name="ReadRecordingButton"/>
                        <Button Grid.Column="2" 
                            Margin="4,0,0,0"
                            Content="Write"
                            Name="WriteRecordingButton"/>
                    </Grid>
                    <TextBlock Grid.Row="1" FontSize="12" Text="Click on file or folder for more options:"/>
                    <core:ExplorerTreeView x:Name="Explorer" Grid.Row="2"
                        ContextMenuService.ShowOnDisabled="True"
                        ContextMenu="{DynamicResource FileContext}">
                        <core:ExplorerTreeView.Resources>
                            <ContextMenu x:Key ="FileContext"  StaysOpen="true">
                                <MenuItem Header="Read Recording" x:Name="LoadRecordingItem"/>
                                <MenuItem Header="Write Recording" x:Name="SaveRecordingItem"/>
                                <MenuItem Header="New Recording" x:Name="NewRecordingItem"/>
                                <MenuItem Header="Delete File" x:Name="DeleteFileButton"/>
                            </ContextMenu>
                            <ContextMenu x:Key="FolderContext" StaysOpen="true">
                                <MenuItem Header="New Recording" x:Name="NewRecordingFolderButton"/>
                                <MenuItem Header="New Folder" x:Name="NewFolderButton"/>
                                <MenuItem Header="Delete Folder" x:Name="DeleteFolderButton"/>
                            </ContextMenu>
                        </core:ExplorerTreeView.Resources>
                    </core:ExplorerTreeView>
                </Grid>
            </TabItem>
            <TabItem Header="Axes">
                <DockPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch" LastChildFill="True">
                    <StackPanel DockPanel.Dock="Left" Margin="0,0,0,0" Orientation="Vertical">
                        <TextBlock Margin="5,5,0,0" Text="Axes:"/>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Row="0" Grid.Column="1" Margin="2,2,5,0" FontSize="12" Text="Enable"/>
                            <TextBlock Grid.Row="0" Grid.Column="2" Margin="2,2,5,0" FontSize="12" Text="Type"/>
                            <TextBlock Grid.Row="0" Grid.Column="3" Margin="5,2,0,0" FontSize="12" Text="Index"/>
                            <TextBlock Grid.Row="0" Grid.Column="4" Margin="5,2,0,0" FontSize="12" Text="Device"/>
                            <TextBlock Grid.Row="0" Grid.Column="5" Margin="5,2,0,0" FontSize="12" Text="Rank"/>
                            <TextBlock Grid.Row="0" Grid.Column="6" Grid.ColumnSpan="2" Margin="5,2,0,0" FontSize="12" Text="Negative Stop"/>
                            <TextBlock Grid.Row="0" Grid.Column="8" Grid.ColumnSpan="2" Margin="5,2,0,0" FontSize="12" Text="Positive Stop"/>
                            <TextBlock Grid.Row="0" Grid.Column="10" Margin="5,2,0,0" FontSize="12" Text="Chart label"/>

                            <TextBlock Grid.Row="1" Grid.Column="6" Margin="5,2,0,0" FontSize="12" Text="Major"/>
                            <TextBlock Grid.Row="1" Grid.Column="7" Margin="5,2,0,0" FontSize="12" Text="Minor"/>
                            <TextBlock Grid.Row="1" Grid.Column="8" Margin="5,2,0,0" FontSize="12" Text="Major"/>
                            <TextBlock Grid.Row="1" Grid.Column="9" Margin="5,2,0,0" FontSize="12" Text="Minor"/>
                            
                            <TextBlock Grid.Row="2" Grid.Column="0" Margin="5,5,0,0" Text="1:"/>
                            <CheckBox Grid.Row="2" Grid.Column="1" Name="AxisEnable1" Margin="0,8,0,0" HorizontalAlignment="Center" />
                            <ComboBox Grid.Row="2" Grid.Column="2" Name="AxisKind1" Margin="2,0,0,0" 
                                           HorizontalAlignment="Right" SelectedIndex="0"
                                      Style="{DynamicResource OptionsComboBox}">
                                <ComboBoxItem Style="{DynamicResource OptionsComboBoxItem}" Content="Angular"/>
                                <ComboBoxItem Style="{DynamicResource OptionsComboBoxItem}" Content="Linear"/>
                            </ComboBox>
                            <xctk:IntegerUpDown Grid.Row="2" Grid.Column="3" 
                                        Name="AxisIndex1" Margin="4,4,0,4"
                                        FormatString="N0" Increment="1"
                                        Minimum="0" Maximum="255" 
                                        IsReadOnly="False" Value="36"/>
                            <xctk:IntegerUpDown Grid.Row="2" Grid.Column="4" 
                                        Name="AxisDevice1" Margin="4,4,0,4"
                                        FormatString="N0" Increment="1"
                                        Minimum="1" Maximum="4" 
                                        IsReadOnly="False" Value="1"/>
                            <xctk:IntegerUpDown Grid.Row="2" Grid.Column="5" 
                                        Name="AxisDeviceRank1" Margin="4,4,0,4"
                                        FormatString="N0" Increment="1"
                                        Minimum="0" Maximum="7" 
                                        IsReadOnly="False" Value="0"/>
                            
                            <xctk:IntegerUpDown Grid.Row="2" Grid.Column="6" 
                                        Name="AxisMinusStopMajor1" Margin="4,4,0,4"
                                        FormatString="N0" Increment="1"
                                        Minimum="0" Maximum="999" 
                                        IsReadOnly="False" Value="0"/>
                            <xctk:IntegerUpDown Grid.Row="2" Grid.Column="7" 
                                        Name="AxisMinusStopMinor1" Margin="4,4,0,4"
                                        FormatString="N0" Increment="1"
                                        Minimum="0" Maximum="999" 
                                        IsReadOnly="False" Value="0"/>
                            <xctk:IntegerUpDown Grid.Row="2" Grid.Column="8" 
                                        Name="AxisPlusStopMajor1" Margin="4,4,0,4"
                                        FormatString="N0" Increment="1"
                                        Minimum="0" Maximum="999" 
                                        IsReadOnly="False" Value="0"/>
                            <xctk:IntegerUpDown Grid.Row="2" Grid.Column="9" 
                                        Name="AxisPlusStopMinor1" Margin="4,4,0,4"
                                        FormatString="N0" Increment="1"
                                        Minimum="0" Maximum="999" 
                                        IsReadOnly="False" Value="0"/>

                            <TextBox Grid.Row="2" Grid.Column="10" Name="AxisDescription1" Margin="5,3,0,3" Text="Pan"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Margin="5,5,0,0" Text="2:"/>
                            <CheckBox Grid.Row="3" Grid.Column="1" Name="AxisEnable2" Margin="0,8,0,0" HorizontalAlignment="Center" />
                            <ComboBox Grid.Row="3" Grid.Column="2" Name="AxisKind2" Margin="2,0,0,0" 
                                           HorizontalAlignment="Right" SelectedIndex="0"
                                      Style="{DynamicResource OptionsComboBox}">
                                <ComboBoxItem Style="{DynamicResource OptionsComboBoxItem}" Content="Angular"/>
                                <ComboBoxItem Style="{DynamicResource OptionsComboBoxItem}" Content="Linear"/>
                            </ComboBox>
                            <xctk:IntegerUpDown Grid.Row="3" Grid.Column="3" 
                                        Name="AxisIndex2" Margin="4,4,0,4"
                                        FormatString="N0" Increment="1"
                                        Minimum="0" Maximum="255" 
                                        IsReadOnly="False" Value="38"/>
                            <xctk:IntegerUpDown Grid.Row="3" Grid.Column="4" 
                                        Name="AxisDevice2" Margin="4,4,0,4"
                                        FormatString="N0" Increment="1"
                                        Minimum="1" Maximum="4" 
                                        IsReadOnly="False" Value="1"/>
                            <xctk:IntegerUpDown Grid.Row="3" Grid.Column="5" 
                                        Name="AxisDeviceRank2" Margin="4,4,0,4"
                                        FormatString="N0" Increment="1"
                                        Minimum="0" Maximum="7" 
                                        IsReadOnly="False" Value="1"/>
                            <xctk:IntegerUpDown Grid.Row="3" Grid.Column="6" 
                                        Name="AxisMinusStopMajor2" Margin="4,4,0,4"
                                        FormatString="N0" Increment="1"
                                        Minimum="0" Maximum="999" 
                                        IsReadOnly="False" Value="0"/>
                            <xctk:IntegerUpDown Grid.Row="3" Grid.Column="7" 
                                        Name="AxisMinusStopMinor2" Margin="4,4,0,4"
                                        FormatString="N0" Increment="1"
                                        Minimum="0" Maximum="999" 
                                        IsReadOnly="False" Value="0"/>
                            <xctk:IntegerUpDown Grid.Row="3" Grid.Column="8" 
                                        Name="AxisPlusStopMajor2" Margin="4,4,0,4"
                                        FormatString="N0" Increment="1"
                                        Minimum="0" Maximum="999" 
                                        IsReadOnly="False" Value="0"/>
                            <xctk:IntegerUpDown Grid.Row="3" Grid.Column="9" 
                                        Name="AxisPlusStopMinor2" Margin="4,4,0,4"
                                        FormatString="N0" Increment="1"
                                        Minimum="0" Maximum="999" 
                                        IsReadOnly="False" Value="0"/>
                            <TextBox Grid.Row="3" Grid.Column="10" Name="AxisDescription2" Margin="5,3,0,3" Text="Tilt"/>

